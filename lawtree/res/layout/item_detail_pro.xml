<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_28"
        android:paddingRight="@dimen/size_28">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/ic_pro_complet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/iv_icon"
            android:text="打纸"
            android:textColor="#333333"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="张三、李四"
            android:textColor="#888888"
            android:textSize="13dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_show"
        android:layout_width="@dimen/size_1"
        android:layout_height="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_38"
        android:background="#E5E5E5" />
</LinearLayout>